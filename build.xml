      <arg line="-OUTPUT_DIRECTORY=test.tmp/CORBA-IDL examples/CORBA-IDL/IDL.jj" />
    </java>

    <javac srcdir="test.tmp/CORBA-IDL" />

    <copy todir="test.tmp/CORBA-IDL/">
